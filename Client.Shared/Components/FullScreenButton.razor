@inject IScreenService ScreenService

<MudPopover
    Open="this.RequestFullScreenEnabled"
    AnchorOrigin="Origin.BottomRight"
    TransformOrigin="Origin.BottomRight"
    Class="pa-5"
    Paper="false">
    <MudFab
        Color="Color.Tertiary"
        Icon="@(this.IsInFullScreenMode ? Icons.Material.Filled.CloseFullscreen : Icons.Material.Filled.OpenInFull)"
        OnClick="this.Switch" />
</MudPopover>