@inherits Screen
@inject IState<RoundFinishedState> State

<ScreenContainer>
    <MudText Typo="Typo.h5" Class="mb-2">
        @L["Components.States.RoundFinished.Scores"]
    </MudText>

    <MudPaper Class="mx-auto">
        <MudList>
            @for (int i = 0; i < this.State.Value.Periods.Count; i++)
            {
                var index = i;
                <MudListItem>
                    <MudText Align="Align.Center">
                        @this.State.Value.Periods[index].Player.Username (@this.State.Value.Periods[index].Scores.Count)
                    </MudText>
                </MudListItem>

                @if (index < this.State.Value.Periods.Count - 1)
                {
                    <MudDivider />
                }
            }
        </MudList>
    </MudPaper>
</ScreenContainer>