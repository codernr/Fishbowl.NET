@inherits Screen
@inject IState<InfoState> State

<ScreenContainer>
    @if(this.State.Value.Message is not null)
    {
        <MudContainer Class="mb-10">
            <MudAlert Severity="this.State.Value.Severity">
                @this.State.Value.Message
            </MudAlert>
        </MudContainer>

    }

    @if (this.State.Value.Loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
</ScreenContainer>