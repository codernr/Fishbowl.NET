@inherits Screen
@inject IState<PeriodStateCollection> State

<ScreenContainer>
    <MudText Typo="Typo.h5" Class="mb-5">
        @this.State.Value.Current.Summary.Player.Username @L["Components.States.PeriodFinished.Scores"]:
        @this.State.Value.Current.Summary.Scores.Count
    </MudText>

    @if(this.State.Value.Current.Summary.Scores.Count > 0)
    {
        <MudText Typo="Typo.h5" Class="mb-2">
            @L["Components.States.PeriodFinished.GuessedWords"]
        </MudText>

        <MudPaper Class="mx-auto">
            <MudList>
                @for (int i = 0; i < this.State.Value.Current.Summary.Scores.Count; i++)
                {
                    var index = i;
                    <MudListItem>
                        <MudText Align="Align.Center">@this.State.Value.Current.Summary.Scores[index].Word.Value</MudText>
                    </MudListItem>

                    @if (index < this.State.Value.Current.Summary.Scores.Count - 1)
                    {
                        <MudDivider />
                    }
                }
            </MudList>
        </MudPaper>
    }
</ScreenContainer>