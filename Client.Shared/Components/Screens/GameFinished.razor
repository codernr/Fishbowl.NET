@inherits Screen
@inject IState<GameFinishedState> State

<ScreenContainer>
    <MudContainer>
        <MudAlert Severity="Severity.Success" Variant="Variant.Filled" Class="mb-1">
            @L["Components.States.GameFinished.Winner"] <strong>@this.Game.Teams[0].Name</strong>
        </MudAlert>
        <MudAlert Severity="Severity.Success" Class="mb-1">
            @L["Components.States.GameFinished.BestPlayer"] <strong>@this.bestPlayer.Username</strong>
        </MudAlert>
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mb-1">
            @L["Components.States.GameFinished.EasiestWord"] <strong>@this.wordRank.Last().Value</strong>
        </MudAlert>
        <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">
            @L["Components.States.GameFinished.HardestWord"] <strong>@this.wordRank.First().Value</strong>
        </MudAlert>
    </MudContainer>

    <MudContainer Class="my-6">
        <MudPaper>
            <MudList>
                @foreach (var team in this.Game.Teams)
                {
                    <MudListItem>
                        <MudText Align="Align.Center">
                            @team.Name
                            (@L["Components.States.GameFinished.Scores"] @team.TotalScoreCount,
                            @L["Components.States.GameFinished.TotalTime"] @team.TotalTime.ToString(@"mm\:ss\.fff"))
                        </MudText>
                    </MudListItem>
                }
            </MudList>
        </MudPaper>
    </MudContainer>
    <MudContainer>
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Warning"
            Size="Size.Large"
            FullWidth="true"
            @onclick="this.Reload">
            @L["Components.States.GameFinished.Button"]
        </MudButton>
    </MudContainer>
</ScreenContainer>