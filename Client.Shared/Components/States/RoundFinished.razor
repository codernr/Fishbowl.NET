@inherits State
@inject IStringLocalizer<Resources> L

<StateContainer Title="@(L["Components.States.RoundFinished.Title"])">
    <MudText Typo="Typo.h5" Class="mb-2">
        @L["Components.States.RoundFinished.Scores"]
    </MudText>

    <MudPaper Class="mx-auto">
        <MudList>
            @for (int i = 0; i < this.Round.Periods.Count; i++)
            {
                var index = i;
                <MudListItem>
                    <MudText Align="Align.Center">
                        @this.Round.Periods[index].Player.Username (@this.Round.Periods[index].Scores.Count)
                    </MudText>
                </MudListItem>

                @if (index < this.Round.Periods.Count - 1)
                {
                    <MudDivider />
                }
            }
        </MudList>
    </MudPaper>
</StateContainer>