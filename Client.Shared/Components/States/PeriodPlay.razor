@inherits State<PeriodPlay>

<StateContainer>
    <MudContainer Class="mb-3">
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Error"
            FullWidth="true"
            Disabled="!this.showRevoke"
            @onclick="e => this.OnLastScoreRevoked()">
            @L["Components.States.PeriodPlay.RevokeButton"]
        </MudButton>
    </MudContainer>

    <MudContainer Class="mt-7 mb-3">
        <Timer Start="this.Period.StartedAt" Length="this.Period.Length" OnExpired="() => this.Expired = true" />
    </MudContainer>

    <MudContainer Class="mt-3 mb-7">
        <MudCard Class="mud-theme-primary">
            <MudCardContent>
                <MudText Typo="Typo.h4">@(this.Word?.Value ?? string.Empty)</MudText>
            </MudCardContent>
        </MudCard>
    </MudContainer>

    <MudContainer Class="my-3">
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Success"
            Size="Size.Large"
            FullWidth="true"
            Disabled="@(this.Word is null)"
            @onclick="this.AddScore">
            @L["Components.States.PeriodPlay.GuessedButton"]
        </MudButton>
    </MudContainer>

    <MudContainer>
        <MudButton
            Variant="Variant.Filled"
            Color="Color.Error"
            Size="Size.Large"
            FullWidth="true"
            Disabled="!this.Expired"
            @onclick="this.FinishPeriod">
            @L["Components.States.PeriodPlay.PassButton"]
        </MudButton>
    </MudContainer>
</StateContainer>