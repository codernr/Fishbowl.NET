@inherits InputState
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StepContainer
            Title="@(L["Components.States.Common.SetupGame"])"
            Subtitle="@(L["Components.States.TeamCount.Title"])"
            TotalSteps="4" Step="2">
            <MudSelect
                T="int"
                @bind-Value="this.teamCount"
                Class="my-10">
                @for (var i = this.teamCount; i <= this.MaxTeamCount; i++)
                {
                    <MudSelectItem T="int" Value="@i" />
                }
            </MudSelect>
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                FullWidth="true"
                Size="Size.Large"
                @onclick="_ => this.Submit(() => this.OnTeamCountSet.InvokeAsync(this.teamCount))">
                @L["Components.States.TeamCount.SubmitButton"]
                </MudButton>
        </StepContainer>;
}