@inherits State
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="@(L["Components.States.GameFinished.Title"])">
            <MudPaper Class="mb-10">
                <MudList>
                    @for (int i = 0; i < this.Game.Teams.Count; i++)
                    {
                        var index = i;
                        var team = this.Game.Teams[index];
                        <MudListItem>
                            <MudText Align="Align.Center">
                                @team.Name (@team.Players.Sum(player => player.Scores.Count))
                            </MudText>
                        </MudListItem>
                    }
                </MudList>
            </MudPaper>
            <MudContainer>
                <MudButton
                    Variant="Variant.Filled"
                    Color="Color.Warning"
                    Size="Size.Large"
                    FullWidth="true"
                    @onclick="_ => this.ReloadRequested.InvokeAsync()">
                    @L["Components.States.GameFinished.Button"]
                </MudButton>
            </MudContainer>
        </StateContainer>;
}