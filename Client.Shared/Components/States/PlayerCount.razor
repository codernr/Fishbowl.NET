@inherits InputState
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StepContainer
            Title="@(L["Components.States.Common.SetupGame"])"
            Subtitle="@(L["Components.States.PlayerCount.Title"])"
            TotalSteps="4" Step="1">
            <MudForm @ref="this.form">
                <MudNumericField
                    @bind-Value="this.playerCount"
                    Label="@(L["Components.States.PlayerCount.Title"])"
                    Min="4"
                    Max="20"
                    Class="my-10" />
                <MudButton
                    Variant="Variant.Filled"
                    Color="Color.Primary"
                    FullWidth="true"
                    Size="Size.Large"
                    Disabled="@(!this.form!.IsValid)"
                    @onclick="_ => this.Submit(() => this.OnPlayerCountSet.InvokeAsync(this.playerCount))">
                    @L["Components.States.PlayerCount.SubmitButton"]
                </MudButton>
            </MudForm>
        </StepContainer>;
}