@inherits State<Info>

<StateContainer>
    @if(this.Message is not null)
    {
        <MudContainer Class="mb-10">
            <MudAlert Severity="this.Severity">
                @this.Message
            </MudAlert>
        </MudContainer>

    }

    @if (this.Loading)
    {
        <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
    }
</StateContainer>