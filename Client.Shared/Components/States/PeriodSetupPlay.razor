@inherits InputState
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="@($"{this.Period.Round.Type}: {this.Period.Player.Name}")">
            <MudText Typo="Typo.h5" Class="mb-5">
                @L["Components.States.PeriodSetupPlay.PeriodLength"]: @(string.Format("{0:m\\:ss}", this.Period.Length))
            </MudText>
            <MudText Typo="Typo.h5" Class="mb-10">
                @L["Components.States.PeriodSetupPlay.Subtitle"]
            </MudText>
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                FullWidth="true"
                Size="Size.Large"
                @onclick="_ => this.Submit(() => this.OnStarted.InvokeAsync(DateTimeOffset.UtcNow))">
                @L["Components.States.PeriodSetupPlay.StartButton"]
            </MudButton>
        </StateContainer>;
}