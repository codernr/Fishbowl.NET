@using MudBlazor
@using Fluxor.Blazor.Web.Components
@inherits FluxorLayout

@inject IState<ScreenManagerState> State

<MudThemeProvider Theme="Themes.Dark" />
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">@this.State.Value.Title</MudText>
    </MudAppBar>
    <MudMainContent Class="mud-height-full">
        <ScreenManager />
        <FullscreenButton />
    </MudMainContent>
</MudLayout>
