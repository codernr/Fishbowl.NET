@inherits ComponentState

<StateContainer>
    <MudGrid>
        <MudItem xs="12">
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Primary"
                Size="Size.Large"
                FullWidth="true"
                @onclick="this.RequestRestore">
                @L["Components.States.Restore.RestoreButton"] 
            </MudButton>
        </MudItem>
        <MudItem xs="12">
            <MudButton
                Variant="Variant.Filled"
                Color="Color.Warning"
                Size="Size.Large"
                FullWidth="true"
                @onclick="this.RequestNewGame">
                @L["Components.States.Restore.NewGameButton"]
            </MudButton>
        </MudItem>
    </MudGrid>
</StateContainer>