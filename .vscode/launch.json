{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Server/bin/Debug/net5.0/Fishbowl.Net.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Server",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Server/Views"
            }
        },
        {
            "name": "Pwa",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "pwa-build",
            "cwd": "${workspaceFolder}/Client.Pwa",
            "browser": "edge"
        },
        {
            "name": "Blazor debug",
            "type": "blazorwasm",
            "browser": "edge",
            "hosted": true,
            "program": "${workspaceFolder}/Server/bin/Debug/net5.0/Fishbowl.Net.Server.dll",
            "request": "launch",
            "cwd": "${workspaceFolder}/Server",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
        }
    ]
}