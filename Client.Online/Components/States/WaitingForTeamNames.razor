@inherits ComponentState<WaitingForTeamNamesState>

<StateContainer>
    @if(this.State.Value.SetupPlayer is not null)
    {
        <MudContainer Class="mb-5">
            <MudAlert Severity="Severity.Info">
                @string.Format(L["Components.States.WaitingForTeamNames.SetupPlayer"], this.State.Value.SetupPlayer.Username)
            </MudAlert>
        </MudContainer>
    }

    <MudContainer Class="mb-10">
        <TeamMembers Players="this.State.Value.Team.Players" />
    </MudContainer>
    
    <MudContainer>
        @if (this.State.Value.Teams.Count > 0)
        {
            <MudText>
                <strong>@L["Components.States.WaitingForTeamNames.TeamNames"]:</strong>
                @(string.Join(", ", this.State.Value.Teams.Select(team => team.Name)))
            </MudText>
        }
        else
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
        }
    </MudContainer>
</StateContainer>