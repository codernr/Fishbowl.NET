@inherits Screen
@inject IState<PeriodState> State

<ScreenContainer>
    <MudText Typo="Typo.h5" Class="mb-5">
        @L["Components.States.PeriodSetupWatch.NextPlayer"]: @this.State.Value.Setup.Player.Username
    </MudText>
    <MudText Typo="Typo.h5" Class="mb-10">
        @L["Components.States.PeriodSetupWatch.PeriodLength"]: @(string.Format("{0:m\\:ss}", this.State.Value.Setup.Length))
    </MudText>
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
</ScreenContainer>