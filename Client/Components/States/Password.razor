@using Fishbowl.Net.Client.Components.Templates
@inherits State

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="Set game password">
            <form @onsubmit="e => this.Callback.InvokeAsync(this.password)" @onsubmit:preventDefault>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating text-dark">
                            <input
                                class="form-control"
                                placeholder="Password"
                                id="password-input"
                                type="text"
                                @bind="this.password"
                                pattern="[a-z0-9\-]{3,30}"
                                title="Lowercase, dash and numbers between 3 and 30 characters"
                                required>
                            <label for="password-input">Set game password</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="d-grid col-6">
                        <button name="create" class="btn btn-warning btn-lg" type="submit" @onclick="e => this.create = true">Create</button>
                    </div>
                    <div class="d-grid col-6">
                        <button name="join" class="btn btn-success btn-lg" type="submit" @onclick="e => this.create = false">Join</button>
                    </div>
                </div>
            </form>
        </StateContainer>;
}