@inherits State

@code
{
    protected override RenderFragment Content =>
        @<div>
            <h2>Round: @this.Round.Type</h2>

            <p>Waiting for start...</p>

            <button type="button" @onclick="e => this.OnStarted.InvokeAsync(DateTimeOffset.UtcNow)">Start</button>
        </div>;
}