@using Fishbowl.Net.Client.Components.Templates
@inherits State
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="@this.Period.Round.Type">
            <div class="row">
                <div class="col">
                    <h4>@L["Components.States.PeriodSetupPlay.PeriodLength"]</h4>
                    <p>@(string.Format("{0:m\\:ss}", this.Period.Length))</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h4>@L["Components.States.PeriodSetupPlay.Subtitle"]</h4>
                </div>
            </div>
            <div class="row">
                <div class="col d-grid">
                    <button class="btn btn-success btn-lg" type="button"
                        @onclick="e => this.OnStarted.InvokeAsync(DateTimeOffset.UtcNow)">
                        @L["Components.States.PeriodSetupPlay.StartButton"]
                    </button>
                </div>
            </div>
        </StateContainer>;
}