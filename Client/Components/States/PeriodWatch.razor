@using Fishbowl.Net.Client.Components.Templates
@inherits State
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="@this.Period.Round.Type">

            <div class="row">
                <div class="col">
                    <h4>@L["Components.States.PeriodWatch.Playing"]</h4>
                    <p>@this.Period.Player.Name</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <Timer Start="this.Period.StartedAt" Length="this.Period.Length" />
                </div>
            </div>
        </StateContainer>;
}