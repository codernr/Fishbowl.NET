@using Fishbowl.Net.Client.Components.Templates
@inherits State

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="Set player words">
            <form @onsubmit="e => this.OnPlayerWordsSet.InvokeAsync(this.words)" @onsubmit:preventDefault>

                @for (int i = 0; i < this.words.Length; i++)
                {
                    var id = i;
                    <div class="row mb-3">
                        <div class="col">
                            <div class="form-floating text-dark">
                                <input type="text" class="form-control" id="word-input-@id" placeholder="Word @id" @bind="this.words[id]">
                                <label for="word-input-@id">Word @id</label>
                            </div>
                        </div>
                    </div>
                }
            
                <div class="row mb-3">
                    <div class="d-grid col">
                        <button class="btn btn-success btn-lg" type="submit">Set</button>
                    </div>
                </div>
            </form>
        </StateContainer>;
}