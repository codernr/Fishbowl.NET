@using Fishbowl.Net.Client.Components.Templates
@inherits State

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="Select round types">
            <form @onsubmit="e => this.OnRoundTypesSet.InvokeAsync(this.SelectedOptions)">
                <div class="row mb-3">
                    <div class="col d-grid gap-3">
                        @for (int i = 0; i < this.options.Count; i++)
                        {
                            var id = i;
                            <input type="checkbox" class="btn-check" id="option-@id" checked="@this.options[i].selected" @onchange="e => this.ToggleOption(id)">
                            <label for="option-@id" class="btn btn-outline-primary btn-lg">@this.options[i].name</label>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="d-grid col">
                        <button class="btn btn-success btn-lg" type="submit">Set</button>
                    </div>
                </div>
            </form>
        </StateContainer>;
}