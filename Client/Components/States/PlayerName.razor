@using Fishbowl.Net.Client.Components.Templates
@inherits State
@inject IStringLocalizer<Resources> L

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="@(L["Components.States.PlayerName.Title"])">
            <form @onsubmit="e => this.OnPlayerNameSet.InvokeAsync(this.playerName)" @onsubmit:preventDefault>
                <div class="row mb-3">
                    <div class="col">
                        <div class="form-floating text-dark">
                            <input
                                type="text"
                                class="form-control"
                                id="name-input"
                                placeholder="@(L["Components.States.PlayerName.InputPlaceholder"])"
                                @bind="this.playerName"
                                minlength="3"
                                required>
                            <label for="name-input">@L["Components.States.PlayerName.Title"]</label>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="d-grid col">
                        <button class="btn btn-success btn-lg" type="submit">
                            @L["Components.States.PlayerName.SubmitButton"]
                        </button>
                    </div>
                </div>
            </form>
        </StateContainer>;
}