@using Fishbowl.Net.Client.Components.Templates
@inherits State

@code
{
    protected override RenderFragment Content =>
        @<StateContainer Title="Period finished">
            <div class="row mb-3">
                <div class="col">
                    <h4>@this.Period.Player.Name scores</h4>
                    <p><strong>@this.Period.Scores.Count</strong></p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <h4>Guessed words</h4>
                    <ul class="list-group">
                        @foreach (var score in this.Period.Scores)
                        {
                            <li class="list-group-item">@score.Word.Value</li>
                        }
                    </ul>
                </div>
            </div>
        </StateContainer>;
}